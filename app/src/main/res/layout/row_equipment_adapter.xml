<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtAdptEqpTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:width="120dp"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAdptEqpType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:width="200dp"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintStart_toEndOf="@+id/txtAdptEqpTag"
        app:layout_constraintTop_toTopOf="@+id/txtAdptEqpTag" />

    <TextView
        android:id="@+id/txtAdptEqpStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:width="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtAdptEqpTag"
        app:layout_constraintTop_toBottomOf="@+id/txtAdptEqpTag" />

    <TextView
        android:id="@+id/txtAdptEqpOoS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:width="200dp"
        app:layout_constraintStart_toEndOf="@+id/txtAdptEqpStatus"
        app:layout_constraintTop_toTopOf="@+id/txtAdptEqpStatus" />

</androidx.constraintlayout.widget.ConstraintLayout>